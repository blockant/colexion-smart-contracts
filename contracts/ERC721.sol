interface Market {
    function placeOrderByTokenContract(
        uint256 tokenId,
        uint256 pricePerNFT,
        uint8 saleType,
        address user,
        uint256 startTime,
        uint256 endTime,
        address royaltyAddress,
        uint256 royaltyPercentage,
        address paymentToken
