}

contract NFT is ERC721 {
    uint256 public tokenId;
    address public owner;
    address public marketPlace;
    Market internal MarketInterface;

    enum SaleType {
        BuyNow,
        Auction,
        OpenForBids
    }

    mapping(uint256 => string) public URI;
    mapping(address => bool) public paymentTokens;

    event PaymentTokenUpdated(address _paymentToken, bool status);

    constructor(
        string memory name_,
        string memory symbol_,
        address _owner,
        address _token
    ) ERC721(name_, symbol_) {
        require(_owner != address(0), "Zero owner address");
        require(_token != address(0), "Zero token address");
        owner = _owner;
        paymentTokens[_token] = true;
        tokenId++;
    }

    /**
     * @dev External function to change the owner of the token contract.
     *
     * @param newOwner, new expected owner of the contract
     */
    function changeOwner(address newOwner) external {
        require(msg.sender == owner, "Not the owner");
        require(newOwner != address(0), "Zero address");
        owner = newOwner;
    }

    /**
     * @dev External function to change the Marketplace contract.
     *
     * @param _contract, new contract address of the Marketplace
     * @return bool returns true on successful transaction
     */
    function setMarketPlace(address _contract) external returns (bool) {
        require(msg.sender == owner, "Not the owner");
        marketPlace = _contract;
        return true;
    }

    /**
     * @dev External function to mint NFT to the user wallet.
     *
     * @param _tokenURI, ipfs/image metadata URL for the NFT.
     * @return bool returns true on successful transaction
     */
    function mint(string memory _tokenURI) external returns (bool) {
        require(bytes(_tokenURI).length > 0, "Invalid URI");
        _mint(msg.sender, tokenId);
        URI[tokenId] = _tokenURI;
        tokenId++;
        return true;
    }

    /**
     * @dev External function to mint NFT to the user wallet from the owner.
     *
     * @param to, address of the end user to mint NFT.
     * @param _tokenURI, ipfs/image metadata URL for the NFT.
     * @return bool returns true on successful transaction
     */
    function mintByOwner(address to, string memory _tokenURI)
        public
        returns (bool)
    {
        require(msg.sender == owner, "Not the owner");
        require(bytes(_tokenURI).length > 0, "Invalid URI");
        _mint(to, tokenId);
        URI[tokenId] = _tokenURI;
        tokenId++;
        return true;
    }

    /**
     * @dev External function to add payment tokens by the owner.
     *
     * @param _token, token address to be added.
     */
    function addPaymentTokens(address _token) external {
        require(msg.sender == owner, "Not the owner");
        require(!paymentTokens[_token], "Token already added as payment mode");
        paymentTokens[_token] = true;
        emit PaymentTokenUpdated(_token, true);
    }

    /**
     * @dev External function to remove payment tokens by the owner.
     *
     * @param _token, token address to be removed.
     */
    function removePaymentTokens(address _token) external {
        require(msg.sender == owner, "Not the owner");
        require(paymentTokens[_token], "Token not added as payment mode");
        paymentTokens[_token] = false;
        emit PaymentTokenUpdated(_token, false);
    }

    /**
     * @dev External function to batch mint NFTs to the user wallets from the owner.
     *
     * @param to, address of the end user to mint NFT.
     * @param _tokenURI, ipfs/image metadata URL for the NFT.
     * @return bool returns true on successful transaction
     */
    function batchMintByOwner(address[] memory to, string[] memory _tokenURI)
        external
        returns (bool)
    {
        require(to.length == _tokenURI.length, "Length Mismatch");
        for (uint256 i; i < to.length; i++) {
            require(mintByOwner(to[i], _tokenURI[i]), "Mint failed");
        }

        return true;
    }

    /**
     * @dev External function to mint NFT to the Marketplace contract.
     *
     * @param _tokenURI, ipfs/image metadata URL for the NFT.
     * @param _saleType, Type of sale.
     * @param pricePerNFT, Price of the NFT.
     * @param startTime, auction start time.
     * @param endTime, auction end time.
     * @param royaltyAddress, address to receive royalty fees.
     * @param royaltyPercentage, percentage fees.
     * @param _paymentToken, payment token to be used.
     * @return bool returns true on successful transaction
     */
    function mintToMarketPlace(
        string memory _tokenURI,
        SaleType _saleType,
        uint256 pricePerNFT,
        uint256 startTime,
        uint256 endTime,
        address royaltyAddress,
        uint256 royaltyPercentage,
        address _paymentToken
    ) public returns (bool) {
        require(bytes(_tokenURI).length > 0, "Invalid URI");
        require(
            paymentTokens[_paymentToken],
            "ERC20: Token not enabled for payment"
        );
        if (startTime < block.timestamp) startTime = block.timestamp;
        if (_saleType == SaleType.BuyNow || _saleType == SaleType.OpenForBids) {
            endTime = startTime;
        } else {
            require(endTime > startTime, "Invalid endtime for auction");
        }
        _mint(marketPlace, tokenId);
        MarketInterface = Market(marketPlace);
        MarketInterface.placeOrderByTokenContract(
            tokenId,
            pricePerNFT,
            uint8(_saleType),
            msg.sender,
            startTime,
            endTime,
            royaltyAddress,
            royaltyPercentage,
            _paymentToken
        );
        URI[tokenId] = _tokenURI;
        tokenId++;
        return true;
    }

